{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/src",
			"runtimeExecutable": "${env:CHROME_PATH}",
			"runtimeArgs": ["--remote-debugging-port=9222"],
			"skipFiles": ["<node_internals>/**"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}
